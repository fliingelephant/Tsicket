
.activity-prepare {
	margin-bottom: 40rpx;
	height: 300rpx;
	-webkit-transition: all 0.5s ease 0s;
	transition: all 0.5s ease 0s;
	border-radius: 20rpx 20rpx 20rpx 20rpx;
	background-color: #F2F2F2;
}
.activity-prepare.unfold {
	height: 400rpx;
	-webkit-transition: all 0.5s ease 0s;
	transition: all 0.5s ease 0s;
}
.collapse {
	width: 100%;
	padding: 40rpx 40rpx 40rpx 40rpx;
}
.imgcard {
	width: inherit;
	height: 300rpx;
	border-radius: 20rpx 20rpx 20rpx 20rpx;
	/* background-color: #007AFF; */
}
.card-back {
	position: absolute;
	width: 100%;
	height: 300rpx;
	-webkit-transition: all 0.5s ease 0s;
	transition: all 0.5s ease 0s;
	border-radius: 20rpx 20rpx 20rpx 20rpx;
	background-color: #F2F2F2;
	z-index: -2;
}
.card-back.unfold {
	height: 400rpx;
	-webkit-transition: all 0.5s ease 0s;
	transition: all 0.5s ease 0s;
}
.line-round {
	margin-top: 10rpx;
	margin-bottom: 10rpx;
	width: 70rpx;
	height: 10rpx;
	border-radius: 5rpx 5rpx 5rpx 5rpx;
	background-color: gainsboro;
}
.info {
	height: 300rpx;
}
.info-flex {
	height: 240rpx;
}
.flex-column {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.toolbar {
	opacity: 0;
	width: 100%;
	height: 0;
	-webkit-transition: all 0.5s ease 0s;
	transition: all 0.5s ease 0s;
	font-size: 48rpx;
}
.toolbar.unfold {
	opacity: 1;
	height: 100rpx;
	-webkit-transition: all 0.5s ease 0s;
	transition: all 0.5s ease 0s;
}
.tab-swiper-view {
	height: calc(100vh - 480rpx - 80rpx)
}
.cuIcon-likefill {
	-webkit-transition: opacity 1s ease-in 0s;
	transition: opacity 1s ease-in 0s;
}

